generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  fid    Int     @id
  likes  Likes[]
  signer signer?
}

model Likes {
  castId    String   @id
  authorFid Int
  likedAt   DateTime @default(now())
  fid       Int
  user      User     @relation(fields: [fid], references: [fid])
}

model signer {
  signer_uuid         String  @unique
  public_key          String  @unique
  status              String
  signer_approval_url String?
  fid                 Int     @unique
  user                User    @relation(fields: [fid], references: [fid])
}
